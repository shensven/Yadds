{
  "extends": ["config:base"],
  "baseBranches": ["dev"],
  "semanticCommits": "enabled",
  "major": false,
  "packageRules": [
    {
      "groupName": "devDependencies",
      "matchDepTypes": ["devDependencies"],
      "enabled": false,
      "excludePackageNames": ["electron"]
    },
    {
      "groupName": "dependencies",
      "matchDepTypes": ["dependencies"],
      "enabled": false,
      "excludePackageNames": [
        "@emotion/react",
        "@emotion/styled",
        "@fontsource/barlow",
        "@mui/icons-material",
        "@mui/material",
        "@mui/system",
        "electron-store",
        "i18next",
        "query-string",
        "react-i18next",
        "react-router-dom"
      ]
    }
  ]
}
