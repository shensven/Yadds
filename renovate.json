{
  "extends": ["config:base"],
  "packageRules": [
    {
      "groupName": "dependencies",
      "matchFiles": ["package.json"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchBaseBranches": ["dev"],
      "enabled": true,
      "matchPackageNames": [
        "@emotion/react",
        "@emotion/styled",
        "@fontsource/barlow",
        "@mui/material",
        "@mui/system",
        "ahooks",
        "byte-size",
        "electron-store",
        "i18next",
        "jotai",
        "lodash",
        "query-string",
        "react",
        "react-dom",
        "react-i18next",
        "react-router-dom",
        "@types/byte-size",
        "@types/lodash",
        "@types/node",
        "@types/react",
        "@types/react-dom",
        "@types/react-test-renderer",
        "electron",
        "electron-builder",
        "react-test-renderer"
      ]
    }
  ]
}
