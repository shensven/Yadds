{
  "extends": ["config:base"],
  "baseBranches": ["dev"],
  "semanticCommits": "enabled",
  "major": false,
  "packageRules": [
    {
      "groupName": "devDependencies",
      "matchDepTypes": ["devDependencies"],
      "enabled": false,
      "excludePackageNames": [
        "@testing-library/jest-dom",
        "@testing-library/react",
        "@types/byte-size",
        "@types/jest",
        "@types/lodash",
        "@types/node",
        "@types/react",
        "@types/react-dom",
        "@types/react-test-renderer",
        "electron",
        "electron-builder",
        "jest",
        "react-test-renderer",
        "ts-jest"
      ]
    },
    {
      "groupName": "dependencies",
      "matchDepTypes": ["dependencies"],
      "enabled": false,
      "excludePackageNames": [
        "@fontsource/barlow",
        "@mui/material",
        "@mui/system",
        "byte-size",
        "electron-store",
        "i18next",
        "jotai",
        "lodash",
        "query-string",
        "react",
        "react-dom",
        "react-i18next",
        "react-router-dom"
      ]
    }
  ]
}
